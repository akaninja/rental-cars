<h2>Filiais:</h2>

<% if @subsidiaries.empty? %>
  <h3><%= 'Nenhuma filial foi cadastrada' %></h3>
<% else %>
  <% @subsidiaries.each do |subsidiary| %>
    <div>
    <%= link_to subsidiary.name, subsidiary_path(id: subsidiary.id) %>
    </div>
  <% end %>
<% end %>

<p></p>
<%= link_to 'Voltar', root_path %>