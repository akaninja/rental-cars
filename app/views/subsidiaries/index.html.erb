<h2>Filiais:</h2>
<%= link_to 'Voltar', root_path %>
<p></p>
<% if @subsidiaries.empty? %>
  <h3><%= 'Nenhuma filial foi cadastrada' %></h3>
<% else %>
  <% @subsidiaries.each do |subsidiary| %>
    <div>
    <%= link_to subsidiary.name, subsidiary %>
    </div>
  <% end %>
<% end %>
<p></p>
<%= link_to 'Registrar uma nova filial', new_subsidiary_path %>