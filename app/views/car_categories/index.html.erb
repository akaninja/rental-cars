<h2>Categorias:</h2>

<%= link_to 'Voltar', root_path %>
<p></p>
<% if @car_categories.empty? %>
    <h3><%= 'Nenhuma categoria cadastrada' %></h3>
<% else %>
  <% @car_categories.each do |category| %>
    <div>
    <%= link_to category.name, category %> #Por convenção o Rails direciona para o objeto 'category'
    </div>                                 #selecionado, ao invés de colocar: car_category_path(id: category.id)
  <% end %>                                 
<% end %>
<p></p>
<%= link_to 'Registrar uma nova categoria', new_car_category_path %>